<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.blackText {
		font-family: Lucida Console, Sans-serif;
		color: #000000;
		font-size: 15px;
		text-align: middle;
	}
	</ui:style>
	<g:HorizontalPanel width="100%" height="100%"
		verticalAlignment="ALIGN_MIDDLE">
		<g:Label text=" Welcome to the greycells.eu dating engine"
			width="445px" styleName="{style.blackText}" />
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:ListBox ui:field="locale" />
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:Button text="Search" ui:field="searchBtn" />
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:Button text="Profile" ui:field="profileBtn" />
		</g:cell>
		<g:HTMLPanel ui:field="unsavedStateContainer" tag="span">Saved</g:HTMLPanel>
		<g:HTMLPanel ui:field="banner" tag="span"></g:HTMLPanel>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:Button text="Sign Out" ui:field="signOutBtn" />
		</g:cell>		
	</g:HorizontalPanel>
</ui:UiBinder> 